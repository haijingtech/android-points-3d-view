<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/black"
    tools:context=".AgeHeightViewTestActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp">
            <LinearLayout
                android:id="@+id/tab1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="120dp"
                android:background="@drawable/shape_retangle_1"
                android:paddingTop="40px"
                android:paddingBottom="40px"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:layout_marginBottom="-3dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="120dp"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="記録">
                </TextView>
                <ImageView
                    android:id="@+id/iv_tab1"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tab2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-3dp"
                android:minWidth="120dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:background="@drawable/shape_retangle_3">
                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="120dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="成長の評価と目安">
                </TextView>
                <ImageView
                    android:id="@+id/iv_tab2"
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tab3"
                android:minWidth="120dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-3dp"
                android:background="@drawable/shape_retangle_3"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center"
                android:layout_gravity="bottom">
                <TextView
                    android:id="@+id/tv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:text="年齢別平均値">

                </TextView>
                <ImageView
                    android:id="@+id/iv_tab3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/boy"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tab4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-3dp"
                android:minWidth="120dp"
                android:background="@drawable/shape_retangle_3"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center"
                android:layout_gravity="bottom">
                <TextView
                    android:id="@+id/tv_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"

                    android:text="年齢別平均値">
                </TextView>
                <ImageView
                    android:id="@+id/iv_tab4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/boy"
                    android:layout_gravity="center"/>
            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:background="@drawable/shape_retangle_2">
            <fragment
                android:name="com.example.mysurfaceview3dapplication.BlankFragment"
                android:id="@+id/fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </LinearLayout>

    <com.example.mysurfaceview3dapplication.AgeHeightView
        android:id="@+id/ahv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>